{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES6",
        "module": "CommonJS",
        "baseUrl": ".",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}